---
interface GitHubRepo {
  name: string;
  description: string;
  html_url: string;
  homepage: string | null;
  stargazers_count: number;
  topics: string[];
  language: string | null;
  updated_at: string;
}

interface Project {
  title: string;
  description: string;
  link: string;
  preview: string;
  status: string;
  language: string | null;
  stars: number;
}

let projects: Project[] = [];

try {
  const response = await fetch('https://api.github.com/users/nikhiilraj/repos?sort=updated&per_page=8');
  if (response.ok) {
    const repos: GitHubRepo[] = await response.json();
    
    // Filter out forks and select top repositories
    const filteredRepos = repos
      .filter(repo => !repo.name.includes('fork'))
      .slice(0, 4);
    
    projects = filteredRepos.map(repo => ({
      title: repo.name,
      description: repo.description || "No description available",
      link: repo.html_url,
      preview: repo.homepage || repo.html_url,
      status: repo.homepage ? "Deployed" : "In Development",
      language: repo.language,
      stars: repo.stargazers_count,
    }));
  }
} catch (error) {
  console.error('Error fetching GitHub repos:', error);
  // Fallback to empty array
  projects = [];
}
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group">
            <div class="rounded-2xl overflow-hidden border border-[var(--white-icon-tr)] bg-[#1414149c] hover:bg-opacity-90 transition-all duration-300 h-full">
              <div class="p-6 h-full flex flex-col">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-grow">
                    <h4 class="text-2xl font-semibold mb-2">{project.title}</h4>
                    <div class="flex items-center gap-3 text-sm text-[var(--white-icon)] mb-3">
                      {project.language && (
                        <span class="flex items-center gap-1">
                          <span class="w-3 h-3 rounded-full bg-[var(--sec)]"></span>
                          {project.language}
                        </span>
                      )}
                      {project.stars > 0 && (
                        <span class="flex items-center gap-1">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                            <path d="M12.0006 18.26L4.94715 22.2082L6.52248 14.2799L0.587891 8.7918L8.61493 7.84006L12.0006 0.5L15.3862 7.84006L23.4132 8.7918L17.4787 14.2799L19.054 22.2082L12.0006 18.26Z"></path>
                          </svg>
                          {project.stars}
                        </span>
                      )}
                      <span class="px-2 py-0.5 rounded-full bg-[var(--white-icon-tr)] text-xs">
                        {project.status}
                      </span>
                    </div>
                  </div>
                </div>
                <p class="text-[var(--white-icon)] text-sm mb-4 flex-grow">
                  {project.description}
                </p>
                <div class="flex gap-2 mt-auto">
                  <a
                    target="_blank"
                    href={project.link}
                    aria-label="GitHub Repository"
                    class="flex-1 flex justify-center items-center gap-2 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] py-2 px-4 rounded-xl hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-5"
                    >
                      <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"></path>
                    </svg>
                    <span class="text-sm">Code</span>
                  </a>
                  <a
                    target="_blank"
                    href={project.preview}
                    aria-label="View Project"
                    class="flex-1 flex justify-center items-center gap-2 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] py-2 px-4 rounded-xl hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-5"
                    >
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                    </svg>
                    <span class="text-sm">View</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <a
      target="_blank"
      href="https://github.com/nikhiilraj?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
